#!/bin/bash
#
# adapted from bashbunni's zshrc example:
#
# https://gist.github.com/bashbunni/3880e4194e3f800c4c494de286ebc1d7

if [ "$1" == "quick" ]; then
	val=$1
	echo $val | lolcat
	timer "15m"
	notify-send "'$val' session done"
	spd-say -t female3 -r +35 "'$val' session done"
elif [ "$1" == "work" ]; then
	val=$1
	echo $val | lolcat
	timer "45m"
	notify-send "'$val' session done"
	spd-say -t female3 -r +35 "'$val' session done"
elif [ "$1" == "break" ]; then
	val=$1
	echo $val | lolcat
	timer "20m"
	notify-send "'$val' session done"
	spd-say -t female3 -r +35 "'$val' session done"
else
	echo -n "something failed"
fi
